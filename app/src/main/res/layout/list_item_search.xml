<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <ImageView
        android:id="@+id/itemSearchImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image_item_description"
        android:focusableInTouchMode="false" />

    <ImageView
        android:id="@+id/itemSearchButton"
        android:layout_width="@dimen/search_item_expand_hw"
        android:layout_height="@dimen/search_item_expand_hw"
        android:background="?attr/selectableItemBackground"
        android:layout_gravity="top|end"
        android:contentDescription="@string/expand_button_description"
        android:visibility="invisible" />
</FrameLayout>